---
//Import Styles
import '../styles/global.css';
import 'animate.css';


//Import Components
import Tags from '../components/Tags.astro';
const images = await Astro.glob("/src/assets/3dImages/*").then(files => {return files.map(file => file.default)});
/*const brandingImages = await Astro.glob("/src/assets/brandingImages/*").then(files => {return files.map(file => file.default)});
*/
import threedLogo from '../assets/3d.png';
import work from '../assets/work.png';
import HeaderLogo from '../components/HeaderLogo.astro';

//Import Layouts
import MainLayout from '../layouts/MainLayout.astro';
import Column1 from '../layouts/Col3d.astro';
import Column2 from '../layouts/Colbranding.astro';
import Column3 from '../layouts/ColWebsites.astro';
import Column4 from '../layouts/ColPrograms.astro';

---

<MainLayout pageTitle = "Sarai Marte">
<div class = "container3" x-data="{open3d:true, openbranding:false, openWeb:false, openPrograms:false}"> 
	<HeaderLogo imageType = {work} width = "96px" height = "41px"> </HeaderLogo>
	<Tags/>
	<Column1>
			{
			images.map(image => (
				<img src = {image} />
			))
			}
	
  	</Column1>
	<Column2> 
		Branding projects coming soon...
	</Column2>
	<Column3>
		Websites coming soon...
	</Column3>
	<Column4>
		Programs coming soon...
	</Column4>

	</div>
	
</MainLayout>

<style>
	img{
        min-width:312px;
        height:312px;
        border-radius:30px;
    }

	.container3{
		display:flex;
		flex-direction:column;
		gap:1em;
	}

	 /* Small Devices, Tablets */
	 @media only screen and (min-width : 768px) {
		.container3{
		display:flex;
		flex-direction:row;
		gap:2em;
		width:80%;
	}
	}

</style>

