---
//Import Styles
import '../styles/global.css';


//Import Components
const blogs = await Astro.glob('../pages/posts/blog1.md');
import HeaderLogo from '../components/HeaderLogo.astro';

//Import Assets
import Icon1 from '../assets/Icon1.png';
import Icon2 from '../assets/Icon2.png';
import brandingLogo from '../assets/branding.png';
import blogLogo from '../assets/blogs.png';

//Import Layouts
import MainLayout from '../layouts/MainLayout.astro';
import Column from '../layouts/ColBlog.astro';

---

<MainLayout>
    <HeaderLogo imageType = {blogLogo} width = "96px" height = "41px"> </HeaderLogo>
	<Column>
    <ul>
    {blogs.map((blog, index) => 
        <div class = "row"> 
            {index % 2 === 0 ? <img src={Icon1} /> : <img src={Icon2} />}
            <li>
                <a href={blog.url}>{blog.frontmatter.title}</a>
            </li>
        </div>
        )}
    </ul>
    </Column>
<MainLayout/>

<style>
    
    .row{
        display:flex;
        justify-content:center;
        align-items:center;
        gap:1em;
        position:relative;
        right:10px;
    }
  
    img{
        width:25px;
        height:23px;
    }
    a:hover{
        position:relative;
        bottom:2px;
    }
    a{
        color:black;
        text-decoration:none;
        font-size:1em;
        font-family: 'Inter', sans-serif;

    }
    li{
        list-style:none;
        width:261px;
        padding:0.5em;

    }


    
</style>