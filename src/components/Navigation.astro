---
import work from '../assets/work.png';
import blogs from '../assets/blogs.png';
import contact from '../assets/contact.png';
import home from '../assets/home.png';

---

<div class = "nav" x-show = "open" @click.outside = "open=false">
    <nav>
        <a href = "/" >
            <img id = "home" src = {home}>
        </a>
        <a href = "/work" >
            <img id = "work" src = {work}>
        </a>
        <a href = "/blogs" > 
            <img id = "blogs" src = {blogs} > 
        </a>
        <a href = "/contact">
            <img id = "contact" src = {contact} >
        </a>
    </nav>
</div>

<style>

    
.nav{
    z-index:2;
    display:flex;
    justify-content: center;
    align-items: center;
    height:100%;
    width:100%;
    background-color:#E5E7EA;
    position:fixed;
    top:0;
    left:0;
}

nav{
    height:100%;
    width:100%;
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap:32px;
}

#work{
    width:182.31px;
}

#blogs{
    width:185px;
}

#contact{
    width:270.07px;
}

#home{ 
    width:270px;
}
</style>